main(){

   printf("\nInforme o nome do funcionario: ");
	char nome[30];
	scanf("%s", &nome);
 
	printf("\nInforme a quantidade de horas trabalhadas: ");
	float vHorasTrabalhadas;
	scanf("%f", &vHorasTrabalhadas);
 
	printf("\nInforme o Salario: ");
	float vValorSalario;
	scanf("%f", &vValorSalario);
 

 
    
	float vValorHora= vValorSalario /vHorasTrabalhadas ;

 
	printf("\nO Valor das horas trabalhadas eh: %5.2f", (vValorHora));

 
